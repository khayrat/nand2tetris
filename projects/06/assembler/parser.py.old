import re

class Parser:
    def __init__(self, fn):
        self.fn = fn
        self.lines = list(open(fn))
        self.len = len(self.lines)
        self.index = 0
        self.comment = re.compile("(//|\s+|^$)")
        self.a_command = re.compile('@(\d+|\w+)')
        self._destPattern = '(A|AD|AM|AMD|D|MD|M)'
        self._jmpPattern = '(JGT|JEQ|JGE|JLT|JNE|JLE|JMP)'
        self._compPattern = '(A|D(\+A)?|1|0|M|(-1))'
        self.c_comp_command = re.compile(self._destPattern+'='+self._compPattern+'(;'+self._jmpPattern+')?')
#        self.c_comp_command = re.compile(self._destPattern+'='+self._compPattern)
        self.c_jmp_command = re.compile(self._compPattern+';'+self._jmpPattern)
        self.l_command = re.compile('\((\w+)\)')
        self.lookaheadCmd = self._getNextCmd()
        self.cmd = None
        self._dest = None
        self._jump = None
        
    def _getNextCmd(self):
        if self.len == self.index: return None
        
        l = self.lines[self.index].strip()
        self.index += 1
        
        if self.comment.search(l):
            return self._getNextCmd()
        else:
            return l
            
    def hasMoreCommands(self):
        return self.lookaheadCmd != None

    def _decompose(self, cmd):
        self.cmdType = None
        self.cmd = None
        self._symbol = None
        self._dest = None
        self._comp = None
        self._jump = None
        print('cmd: "%s"' % cmd)
        
        m=self.a_command.search(cmd)
        if m:
            self.cmdType = 'A_COMMAND'
            self._symbol = m.group(1)
            return

        m = self.c_comp_command.search(cmd) 
        if m:
            self.cmdType = 'C_COMMAND'
            print("group: %s" % str(m.groups()))
            d = m.group(1)
            if d in self._destPattern: 
                self._dest = d
            if '=' in cmd:
                c = m.group(2)
                self._comp = c
            if ';' in cmd:
                j = m.groups()[-1]
                self._jump = j
            return

        m = self.c_jmp_command.search(cmd) 
        if m:
            self.cmdType = 'C_COMMAND'
            print("group: %s" % str(m.groups()))
            c = m.group(1)
            self._comp = c
            j = m.group(2)
            self._jump = j
            return

        m = self.l_command.search(cmd)
        if m:
            self.cmdType = 'L_COMMAND'
            self._symbol = m.group(1)
            return

    def advance(self):
        self._decompose(self.lookaheadCmd)
        self.lookaheadCmd = self._getNextCmd()

    def commandType(self): return self.cmdType
        
    def symbol(self): return self._symbol

    def dest(self): return self._dest

    def comp(self): return self._comp

    def jump(self): return self._jump
    

if __name__ == '__main__':
    fn = 'Test.asm'
    p = Parser(fn)

    while p.hasMoreCommands():
        p.advance()
        t=p.commandType()
        print("type: %s " % t)
        s=p.symbol()
        print("symbol: %s" % s)
        d=p.dest()
        print("dest: %s " % d)
        c=p.comp()
        print("comp: %s" % c)
        j=p.jump()
        print("jump: %s" % j)
